<!DOCTYPE HTML>
<html>
<head>
    <title>Groups</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
    <nav class='navbar navbar-default' id='links'>
        <div class='container-fluid'>
            <div class='navbar-header'>
                <p class='navbar-brand'>Mezuri</p>
            </div>
            <ul class='nav navbar-nav'>
                <li><a href='/groups' class='nav'>Groups</a></li>
                <li><a href='/users' class='nav'>Users</a></li>
            </ul>
        </div>
    </nav>

    <div id='groups-header' class='text-center' style='padding-left:10px;'>
        <h3>Groups</h3>
    </div>

    <div id='add-group-form' style='padding-left:10px;'>
        <form action='/groups' method='post'>
            <input type='text' name='add_group_name' placeholder='Add Group'>
            <button type='submit' class='btn btn-primary btn-xs' style='margin:10px'><span class='glyphicon glyphicon-plus' aria-hidden='true'></button>
        </form>
    </div>

    <div id='groups' style='padding-left:10px; padding-right:10px'>
        {{#each value}}
            <div class='group' id='{{id}}'>
                <p class='h4'>
                    {{displayName}}
                    <span style="display:inline-block; width:10px;"></span>
                    <a href='/groups/{{id}}'><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span></a>
                </p>

                <ul class='list-group'>
                {{#each members}}
                    <li class='list-group-item'>
                        <div id='{{id}}'>
                            <p>{{displayName}}</p>
                        </div>
                    </li>
                {{/each}}
                </ul>
            </div>
        {{/each}}
    </div>
</body>
</html>
