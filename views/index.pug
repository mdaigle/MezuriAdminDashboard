extends shared/layout.pug

block vars
    - var title = 'Mezuri Title'

block append stylesheets
    link(rel='stylesheet', href='index.css')

block content
    div(class='container')
        div(class=['row', 'text-center'])
            each page in pages
                div(class=['text-center', 'index-item'])
                    a(href=page.href) #{page.name}