<!DOCTYPE HTML>
<html>
<head>
    <title>Users</title>
    {{#each scripts}}
        <script type="text/javascript" src="{{this.src}}" {{this.attribute}}></script>
    {{/each}}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/users.css">
</head>
<body>
    <nav class='navbar navbar-default' id='links'>
        <div class='container-fluid'>
            <div class='navbar-header'>
                <p class='navbar-brand'>Mezuri</p>
            </div>
            <ul class='nav navbar-nav'>
                <li><a href='/groups' class='nav'>Groups</a></li>
                <li><a href='/users' class='nav'>Users</a></li>
            </ul>
        </div>
    </nav>

    <div id="users_header" class='text-center'>
        <div class='h3'>Users</div>
    </div>
    <a href="/users/delete" style='padding:10px;'>
        <span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>
    </a>
    <div id="users">
        <table class='table'>
            <tr>
                <th>Display Name</th>
                <th>Direct Memberships</th>
                <th>Transitive Memberships</th>
            </tr>
            {{#each users}}
                <tr class="user">
                    <td><a href="/users/profile/{{this.id}}">{{this.displayName}}</a></td>
                    <td class="direct-member-of-list">
                        <div class="member-of">
                            {{#each this.directMemberOf}}
                                <p>{{this.displayName}}</p>
                            {{/each}}
                        </div>
                    </td>
                    <td class="transitive-member-of-list">
                        <div class="member-of">
                            {{#each this.transitiveMemberOf}}
                                <p>{{this.displayName}}</p>
                            {{/each}}
                        </div>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
</body>
</html>
